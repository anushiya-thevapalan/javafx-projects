<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label fx:id="nameLabel" text="Name" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="90"/>
    <TextField fx:id="nameField" onKeyReleased="#handleKeyReleased" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="90" GridPane.columnSpan="2"/>

    <CheckBox fx:id="clearFieldCheck" text="Clear the field after clicking okay" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="3"/>

    <Button fx:id="okayButton" text="Okay" onAction="#onOkayClicked" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="5" prefWidth="90"/>
    <Button fx:id="cancelButton" text="Cancel" onAction="#onClicked" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="90"/>
    <Button fx:id="helpButton" text="Help" onAction="#onClicked" GridPane.rowIndex="2" GridPane.columnIndex="2" prefWidth="90"/>
</GridPane>