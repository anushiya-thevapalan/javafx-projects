<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label  text="Name" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="90"/>
    <TextField fx:id="name" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="90" GridPane.columnSpan="2"/>

    <Button text="Okay" onAction="#onOkayClicked" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="5" prefWidth="90"/>
    <Button text="Cancel" onAction="#onCancelClicked" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="90"/>
    <Button text="Help" GridPane.rowIndex="1" GridPane.columnIndex="2" prefWidth="90"/>
</GridPane>